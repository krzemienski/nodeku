{
  "name": "nodeku",
  "version": "1.0.20",
  "description": "",
  "engines": {
    "node": ">=7.0.0"
  },
  "main": "index.js",
  "scripts": {
    "lint": "xo",
    "test": "npm run lint && nyc ava",
    "report": "nyc report --reporter=html --report-dir $CIRCLE_ARTIFACTS",
    "publish-npm": "publish"
  },
  "keywords": [
    "roku",
    "ssdp"
  ],
  "bugs": {
    "url": "https://github.com/sgnl/nodeku/issues"
  },
  "homepage": "https://github.com/sgnl/nodeku",
  "repository": {
    "type": "git",
    "url": "https://github.com/sgnl/nodeku"
  },
  "author": "Ray Farias <rayrfarias@gmail.com> (http://github.com/sgnl)",
  "license": "Apache-2.0",
  "devDependencies": {
    "ava": "^0.19.1",
    "nyc": "^11.0.2",
    "proxyquire": "^1.8.0",
    "publish": "^0.6.0",
    "superagent-mock": "^3.4.0",
    "xo": "^0.18.2"
  },
  "dependencies": {
    "bluebird": "^3.4.7",
    "got": "^7.0.0",
    "node-ssdp": "^3.2.1",
    "npm": "^6.0.0",
    "superagent": "^3.5.2",
    "xml2js": "^0.4.17"
  },
  "ava": {
    "files": [
      "test/*.test.js"
    ],
    "concurrency": 10
  },
  "nyc": {
    "include": [
      "lib/discovery.js",
      "lib/device.js"
    ]
  },
  "xo": {
    "space": true,
    "rules": {
      "new-cap": "off",
      "no-prototype-builtins": "off",
      "object-curly-spacing": [
        "error",
        "always"
      ]
    },
    "ignores": [],
    "overrides": []
  }
}
